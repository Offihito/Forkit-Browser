{
  "name": "forkit",
  "version": "1.0.0",
  "description": "Open Source Browser Based on Chromium",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron main.js --no-sandbox",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": ["browser", "electron", "chromium", "open-source"],
  "author": "Offihito",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.offihito.forkit",
    "productName": "Forkit",
    "copyright": "Copyright Â© 2025 Offihito",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "assets/**/*",
      "build/**/*",
      "!dist/**",
      "!.git/**"
    ],
    "win": {
      "target": [
        "portable",          
        "nsis"                
      ],
      "icon": "build/icon.ico",
      "artifactName": "Forkit-${version}-${target}.${ext}",
      "publisherName": "Offihito"
    },
    "portable": {
      "artifactName": "Forkit-${version}-portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm", "snap"],
      "icon": "build/icon.png",
      "category": "Network;WebBrowser"
    }
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3"
  }
}